// create note
API="${API_ORIGIN:-http://localhost:4741}"
URL_PATH="/notes"
curl "${API}${URL_PATH}" \
  --include \
  --request POST \
  --header "Content-Type: application/json" \
  --header "Authorization: Token token=BAhJIiU5YTliNWEwOTAwZGZlNzhkZmNlMDYzOTIwYmFmNmE3MAY6BkVG--6ed6a500bae468e081d441b4f4760d09dbd59e12" \
  --data '{
    "note": {
      "hive_name": "Hive Two",
      "observation_date": "2017-06-05",
      "observe": "test the note feature",
      "task": "remove drone brood",
      "task_due_date": "2017-07-05",
      "task_status": "Done"
    }
  }'
// get notes
